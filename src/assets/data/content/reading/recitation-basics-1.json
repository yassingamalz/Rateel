    "verses": [
      {
        "id": "adab-verse-1",
        "text": "ينبغي للقارئ أن يستحضر عظمة كلام الله تعالى",
        "marks": [
          {
            "startIndex": 0,
            "endIndex": 38,
            "text": "ينبغي للقارئ أن يستحضر عظمة كلام الله تعالى",
            "ruleId": "adab-general"
          }
        ]
      },
      {
        "id": "adab-verse-2",
        "text": "من آداب التلاوة الطهارة واستقبال القبلة والجلوس بخشوع وتدبر",
        "marks": [
          {
            "startIndex": 0,
            "endIndex": 10,
            "text": "من آداب التلاوة",
            "ruleId": "adab-title"
          },
